<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.kie</groupId>
    <artifactId>kie-parent-with-dependencies</artifactId>
    <version>6.3.0.Final</version>
  </parent>

  <groupId>org.drools</groupId>
  <artifactId>drools-chance</artifactId>
  <version>6.3.0.Final</version>
  <packaging>pom</packaging>

  <name>Drools Chance</name>
  <description>
    Incubator project for a number of ideas
  </description>


  <properties>
    <chance.version>6.3.0.Final</chance.version>
    <drools.version>6.3.0.Final</drools.version>
    <planner.version>6.3.0.Final</planner.version>
  </properties>


  <modules>
    <module>drools-shapes</module>
	  <module>drools-provenance</module>
    <module>drools-expect</module>
	  <!--module>drools-chance-core</module-->
  </modules>


  <dependencyManagement>

    <dependencies>

      <dependency>
        <groupId>org.drools</groupId>
        <artifactId>drools-compiler</artifactId>
        <version>${drools.version}</version>
      </dependency>
      <dependency>
        <groupId>org.optaplanner</groupId>
        <artifactId>optaplanner-core</artifactId>
        <version>${planner.version}</version>
      </dependency>
	    <dependency>
		    <groupId>org.drools</groupId>
		    <artifactId>drools-shapes-utilities</artifactId>
		    <version>${chance.version}</version>
	    </dependency>
      <dependency>
        <groupId>de.lab4inf</groupId>
        <artifactId>Lab4Jefis</artifactId>
        <version>0.1.0</version>
      </dependency>

      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.11</version>
        <scope>test</scope>
      </dependency>
    </dependencies>

  </dependencyManagement>


  <repositories>
    <repository>
      <id>jboss-releases-repository</id>
      <name>JBoss Releases Repository</name>
      <url>https://repository.jboss.org/nexus/content/repositories/releases/</url>
    </repository>

    <repository>
      <id>jboss-public-repository-group</id>
      <name>JBoss Public Repository Group</name>
      <url>http://repository.jboss.org/nexus/content/groups/public/</url>
      <layout>default</layout>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
    </repository>

    <repository>
      <id>lab4-Inf-repository</id>
      <name>Lab4Inf-repo</name>
      <url>http://www.lab4inf.fh-muenster.de/lab4inf/maven-repository</url>
    </repository>


    <repository>
      <id>choco-repository</id>
      <name>Choco Repository</name>
      <url>http://www.emn.fr/z-info/choco-repo/mvn/repository/</url>

      <releases>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </snapshots>
    </repository>

  </repositories>

</project>

